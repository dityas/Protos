	(frames Frame_jl1)
	(
		(frame1 	(m0 	(0.5)))
		(frame1 	(m1 	
			(TigerLoc 	(TR 	(0.85)) 	(TL 	(0.15)))
		))
		(frame1 	(m2 	
			(TigerLoc 	(TR 	(0.15)) 	(TL 	(0.85)))
		))
	)
)

(defdd initLoc
		(TigerLoc 	UNIFORM)
)

